<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginOrRegister"
    android:background="@color/main_screen_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_or_register_textView_username"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录名"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/login_or_register_editText_username"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_or_register_textView_password"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录密码"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/login_or_register_editText_password"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_or_register_Button_login"
            android:layout_width="@dimen/main_screen_button_width"
            android:layout_height="@dimen/main_screen_button_height"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="登录" />

        <Button
            android:id="@+id/login_or_register_Button_return"
            android:layout_width="@dimen/main_screen_button_width"
            android:layout_height="@dimen/main_screen_button_height"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="返回" />
    </LinearLayout>
</LinearLayout>